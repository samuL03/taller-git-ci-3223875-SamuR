name: CI

on:
  push:
    branches: [ main, feat/ui-basica ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 18

      - name: Install dependencies
        run: |
          npm init -y
          npm install --save-dev prettier

      - name: Run Prettier check
        run: npx prettier --check .

      - name: Run tests
        run: node --test
